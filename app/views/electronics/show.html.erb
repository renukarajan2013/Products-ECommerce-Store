<%- model_class_electronics = Electronics -%>
<%- model_class_product  = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class_electronics.model_name.human.titleize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class_electronics.human_attribute_name(:id) %></th>
      <th><%= model_class_product.human_attribute_name(:name) %></th>
      <th><%= model_class_electronics.human_attribute_name(:description) %></th>
      <th><%= model_class_product.human_attribute_name(:price) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @electronics = Electronics.where(product_id: params[:product_id]).first %>
    <% @product = Product.where(id: @electronics.product_id ).first%>
    <tr>
        <td><%= @electronics.id%></td>
        <td><%= @product.name %></td>
        <td><%= @electronics.description%></td>
        <td><%= @product.price %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_electronic_path(@electronics), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      electronics_path(@electronics),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  </tbody>
</table>

