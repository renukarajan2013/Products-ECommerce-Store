<%- model_class = Product-%>
<div class="page-header">
  <h1>My Cart</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    	<% @cart_items = CartItem.where(cart_id: @cart.id) %>
    	<% @cart_items.each do |cart_item|%>
        <% @product = Product.where(id: cart_item.product_id).first%>
         <tr>
<td><%= @product.name %></td>
        <td><%= number_to_currency(@product.price)%></td>
        <td><%= image_tag @product.image_url(:thumb).to_s %><td>

	<td>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(@product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>

        <%end%>	
	</tr>
	<tr>
      		<td></td>
      		<td></td>
      		<td>Total Price</td>
      		<td><%= number_to_currency(@cart.total_price) %></td>
    	</tr>
  </tbody>
</table>





  <%= link_to t('.Continue Shopping', :default => t("helpers.links.Continue Shopping")),
                      '/Browse', :method => :get, :class => 'btn btn-small' %>
<%= link_to t('.Empty Cart', :default => t("helpers.links.Empty Cart")),
                      cart_path(@cart),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-small btn-danger' %>
